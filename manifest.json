{
	"manifest_version": 2,
	"name": "Chrome Controller",
	"description": "Gives the ability to browse the web using your Xbox / PlayStation ( and many other ) controllers easily and comfortably!",
	"version": "0.1",
	"content_scripts": [
		{
			"matches": ["<all_urls>", "*://*/_/chrome/newtab*"],
			"exclude_glob": ["https://www.youtube.com/*"],
			"js": ["js/jquery.js", "js/setup.js", "js/global.js"],
			"run_at": "document_start"
		},
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["js/jquery.js", "js/setup.js", "js/global.js", "js/youtube.js"],
			"run_at": "document_start"
		}
	],
	"background": {
		"scripts": ["js/background.js"]
	},
	"permissions": [
		"tabs"
	]
}