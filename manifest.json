{
	"manifest_version": 2,
	"name": "Chrome Controller",
	"description": "Gives the ability to browse the web using your Xbox / PlayStation ( and many other ) controllers easily and comfortably!",
	"version": "0.3",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/jquery.js", "js/setup.js", "js/global.js"],
			"run_at": "document_start"
		},
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["js/youtube.js"]
		},
		{
			"matches": ["https://www.youtube.com/watch?v=*"],
			"js": ["js/youtube-videoplayer.js"]
		}
	],
	"background": {
		"scripts": ["js/background.js"]
	},
	"permissions": [
		"tabs"
	]
}